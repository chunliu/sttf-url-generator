{
  "manifest_version": 2,  
  "name": "STTF Url Generator",
  "version": "0.8",
  "author": "Chun Liu",
  "description": "Generate a scroll-to-text-fragment url and open it in a new tab.",
  "permissions": [
    "clipboardWrite", 
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/sttf-url16.png",
    "32": "images/sttf-url32.png",
    "48": "images/sttf-url48.png",
    "128": "images/sttf-url128.png"
  },
  "minimum_chrome_version": "80"
}